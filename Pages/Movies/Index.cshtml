@page
@model CineMania.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div class="row">
    
    @foreach (var item in Model.Movie)
    {
        <div class="col-md-4 d-flex align-items-stretch">
            <a class="text-decoration-none" asp-page="./Details" asp-route-id="@item.Id">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/images/posters/@item.ImageName" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title" a>@item.Title</h5>
                    <p class="card-text">@item.Description.</p>
                    @* <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">View</a> *@
                </div>
            </div>
            </a>
        </div> 
        
    } 
</div>